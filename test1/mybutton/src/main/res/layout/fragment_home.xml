<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout

        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/id_iv_search"
            android:layout_width="30sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_height="30sp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_search_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="首页"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/id_iv_detail"
            android:layout_width="30sp"
            android:layout_marginTop="8dp"
            android:layout_height="30sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="340dp"
            android:src="@drawable/ic_baseline_more_horiz_24" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_tv_all"
            android:text="推荐"
            android:layout_marginLeft="60sp"
            android:textColor="#1296db"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="25sp"
            android:layout_height="match_parent"
     />
        <TextView
            android:id="@+id/id_tv_waitedSolve"
            android:textColor="#1296db"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="活动"
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="25sp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/id_tv_solved"
            android:textColor="#1296db"
            android:textStyle="bold"
            android:text="互助"
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="25sp"
            android:layout_height="match_parent"
           />
        <TextView
            android:id="@+id/id_tv_doing"
            android:textColor="#1296db"
            android:textStyle="bold"
            android:text="树洞"
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <com.example.mybutton.Fragment.Fragment_view_pager1.view.SwipeRefreshLayout
        android:id="@+id/id_swiperefresh"
        android:layout_width="match_parent"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </com.example.mybutton.Fragment.Fragment_view_pager1.view.SwipeRefreshLayout>>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
      "/>
    <!--    1296db-->
</LinearLayout>